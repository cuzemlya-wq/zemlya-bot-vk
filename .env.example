# ============================================
# VK Bot Configuration
# ============================================

# VK API Settings
VK_TOKEN=your_vk_group_access_token_here
VK_GROUP_ID=your_group_id_here
VK_API_VERSION=5.131

# ============================================
# Database Configuration
# ============================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=zemlya_bot
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Database URL (alternative format)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/zemlya_bot

# ============================================
# External API Keys
# ============================================

# Rosreestr API (ЕГРН)
ROSREESTR_API_KEY=your_rosreestr_api_key_here
ROSREESTR_API_URL=https://rosreestr.gov.ru/api/online

# Cadastre API
CADASTRE_API_KEY=your_cadastre_api_key_here
CADASTRE_API_URL=https://pkk.rosreestr.ru/api

# Market Data API (для рыночных цен)
MARKET_DATA_API_KEY=your_market_api_key_here
MARKET_DATA_API_URL=https://api.example.com/v1

# YuKassa Payment Gateway
YUKASSA_SHOP_ID=your_shop_id_here
YUKASSA_SECRET_KEY=your_secret_key_here

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/zemlya_bot.log
LOG_FORMAT=json

# ============================================
# Application Settings
# ============================================

# Environment
PRODUCTION=false
DEBUG=true

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60

# Report Settings
REPORT_CACHE_TTL=3600
MAX_REPORT_SIZE_MB=10

# Payment Settings
REPORT_PRICE_RUB=499
FREE_REPORTS_LIMIT=3

# ============================================
# Redis Configuration (Optional)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Monitoring & Metrics
# ============================================

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Sentry (Error Tracking)
SENTRY_DSN=

# ============================================
# Feature Flags
# ============================================

ENABLE_PAYMENTS=true
ENABLE_CADASTRE_LOOKUP=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true

# ============================================
# Admin Settings
# ============================================

ADMIN_VK_IDS=123456789,987654321
SUPPORT_CHAT_URL=https://vk.me/your_support
